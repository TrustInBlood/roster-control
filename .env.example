# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=roster_control
DB_USER=your_db_user
DB_PASSWORD=your_db_password
# Set to 'true' to enable verbose SQL query logging (disabled by default)
# WARNING: Can generate excessive output with high-volume operations
DB_QUERY_LOGGING=false

# BattleMetrics API
BATTLEMETRICS_TOKEN=your_battlemetrics_token_here
BATTLEMETRICS_BANLIST_ID=your_banlist_id_here

# SquadJS Configuration
SQUADJS_HOST=localhost
SQUADJS_PORT=3000
SQUADJS_PASSWORD=your_squadjs_password_here

# SquadJS Server Tokens (for multiple servers)
SQUADJS_TOKEN_SERVER1=your_squadjs_server1_token_here
SQUADJS_TOKEN_SERVER2=your_squadjs_server2_token_here
SQUADJS_TOKEN_SERVER3=your_squadjs_server3_token_here
SQUADJS_TOKEN_SERVER4=your_squadjs_server4_token_here
SQUADJS_TOKEN_SERVER5=your_squadjs_server5_token_here

# HTTP Server Configuration
HTTP_PORT=your_http_port_here

# Player Stats API Configuration
# URL for fetching player statistics (kills, deaths, revives, etc.)
STATS_API_URL=http://216.114.75.106:12000/stats

# Logging Configuration
LOG_LEVEL=info

# Whitelist Sync Configuration
# Set to true to skip initial bulk whitelist sync on startup (recommended for production)
# Set to false to run full sync on startup (useful for initial deployment or recovery)
SKIP_INITIAL_WHITELIST_SYNC=true

# Staff Role Sync Configuration
# Set to true to skip initial bulk staff sync on startup (recommended for development)
# Set to false to run full sync on startup (useful for initial deployment or recovery)
SKIP_INITIAL_STAFF_SYNC=false

# Member Cache Service Configuration (for large Discord servers)
# Enable large guild mode for optimized member fetching in 10,000+ member servers
# Set to true to enable chunked fetching and avoid timeout errors
LARGE_GUILD_MODE=true

# Cache TTL (Time To Live) in milliseconds - how long to keep member cache
# Default: 3600000 (1 hour). Increase for very large guilds to reduce fetch frequency
MEMBER_CACHE_TTL=3600000

# Chunk size for large guild fetching - how many members to fetch at once
# Default: 1000. Lower values are safer for very large guilds but slower
CHUNK_FETCH_SIZE=1000

# Member fetch timeout in milliseconds
# Default: 60000 (60 seconds). Increase if guild is extremely large (25,000+ members)
MEMBER_FETCH_TIMEOUT=60000

# Donation Webhook Configuration
# Optional: Token for webhook authentication (recommended for production)
# Set in donations.js SECURITY.ENABLE_TOKEN_VALIDATION to true to use
DONATION_WEBHOOK_TOKEN=your_webhook_secret_token_here

# BattleMetrics Webhook Configuration
# Set to true to enable authentication (recommended for production)
BATTLEMETRICS_WEBHOOK_ENABLE_TOKEN=false

# Authentication Method 1: X-Signature (HMAC-SHA256) - RECOMMENDED
# Set this to the "Shared Secret" from your BattleMetrics webhook action
# BattleMetrics will sign requests with HMAC-SHA256 using this secret
BATTLEMETRICS_WEBHOOK_SECRET=your_shared_secret_from_battlemetrics

# Authentication Method 2: Query Token - ALTERNATIVE (simpler but less secure)
# Pass this token in the webhook URL: ?token=your_token
# Example webhook URL: http://your-server:3001/webhook/battlemetrics/whitelist?token=your_token
BATTLEMETRICS_WEBHOOK_TOKEN=your_battlemetrics_webhook_token_here

# Dashboard Configuration
# Required: Discord OAuth2 Client Secret (from Discord Developer Portal)
# Go to https://discord.com/developers/applications -> Your App -> OAuth2 -> Client Secret
DISCORD_OAUTH_CLIENT_SECRET=your_discord_oauth_client_secret_here

# Required: Session secret for dashboard authentication (generate a random secure string)
SESSION_SECRET=your_random_session_secret_here

# Optional: Dashboard OAuth callback URL (defaults to http://localhost:3001/api/v1/auth/callback)
DISCORD_OAUTH_CALLBACK_URL=http://localhost:3001/api/v1/auth/callback

# Dashboard URL (the public URL where your dashboard is accessible)
DASHBOARD_URL=http://localhost:3001